<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/families_selector_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/member_previous_ib"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/ic_action_previous_selector" />

    <ImageButton
        android:id="@+id/member_next_ib"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/ic_action_next_selector" />

    <sctek.cn.ysbracelet.uiwidget.HorizontalListView
        android:id="@+id/families_hlv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:overScrollMode="never"
        android:background="@color/orange"
        app:dividerWidth="5dp"
        android:layout_toRightOf="@id/member_previous_ib"
        android:layout_toLeftOf="@id/member_next_ib">

    </sctek.cn.ysbracelet.uiwidget.HorizontalListView>

</RelativeLayout>
